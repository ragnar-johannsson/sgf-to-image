{
  "name": "sgf-to-image",
  "version": "0.1.0",
  "description": "Convert SGF (Smart Game Format) files to high-quality PNG/JPEG diagrams",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "eslint src --ext .js,.jsx --report-unused-disable-directives --max-warnings 0 || echo 'Note: TypeScript linting requires @typescript-eslint setup'",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "size-check": "bundlesize",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "sgf",
    "go",
    "baduk",
    "weiqi",
    "diagram",
    "image",
    "png",
    "jpeg",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "bundlesize": "^0.18.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.10.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.5.2",
    "vitest": "^0.34.0"
  },
  "dependencies": {
    "@sabaki/sgf": "^3.4.7",
    "canvas": "^2.11.2"
  },
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "150 kB"
    }
  ]
}
